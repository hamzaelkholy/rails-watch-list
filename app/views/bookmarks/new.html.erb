<div class="container">
  <div class="row">
    <div class="col">
      <%= simple_form_for [ @list, @bookmark ] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit %>
      <% end %>
      <p><%= link_to 'Back to lists', lists_path, class: 'btn btn-primary mt-3' %></p>
    </div>
  </div>
</div>
