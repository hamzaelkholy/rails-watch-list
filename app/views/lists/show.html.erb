<div class='container'>
<h1><%= @list.name %> list</h1>
<% @list.bookmarks.each do |bookmark| %>
  <% @movie = Movie.find(bookmark[:movie_id]) %>
  <h5><%= bookmark.movie.title %></h5>
  <p><%= bookmark.comment %></p>
  <p><%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Whoa! Are you sure?"}, class: 'text-danger' %></p>
<% end%>
<p><%= link_to 'Add a movie to the list', new_list_bookmark_path(@list), class: 'btn btn-primary' %></p>
<p><%= link_to 'Back', lists_path, class: 'btn btn-primary mt-3' %></p>
</div>
